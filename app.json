{
  "expo": {
    "name": "BuzzAp Messenger",
    "slug": "buzzap-messenger",
    "version": "1.2.0",
    "newArchEnabled": true,
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#6C5CE7"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.buzzap.messenger"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6C5CE7"
      },
      "package": "com.buzzap.messenger"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router"
    ],
    "scheme": "buzzap-messenger",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "primaryColor": "#6C5CE7",
    "colors": {
      "primary": "#6C5CE7",
      "secondary": "#00CECE",
      "accent": "#FD79A8",
      "background": "#F9FAFC",
      "card": "#FFFFFF",
      "text": "#2D3436",
      "border": "#DFE6E9",
      "success": "#00B894",
      "warning": "#FDCB6E",
      "error": "#FF7675"
    }
  }
}
